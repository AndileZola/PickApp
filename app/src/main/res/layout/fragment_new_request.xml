    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#E0E0E0"
                        android:textSize="20dp"
                        android:text="Origin"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <RadioGroup
                        android:id="@+id/pickup_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/home_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My home"
                            android:layout_weight="1"
                            android:textColor="#E0E0E0"
                            android:buttonTint="#E0E0E0"
                            android:checked="true" />
                        <RadioButton
                            android:id="@+id/my_location"
                            android:layout_width="wrap_content"
                            android:textColor="#E0E0E0"
                            android:buttonTint="#E0E0E0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="My location" />
                    </RadioGroup>
                </LinearLayout>
                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My home"
                        android:id="@+id/home_address"
                        android:layout_gravity="right" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My location"
                        android:id="@+id/my_location"
                        android:layout_gravity="right" />
                </LinearLayout>-->

            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passenger_origin"
                android:inputType="text"
                android:padding="10dp"
                android:background="@drawable/round_corner_text_edit"
                android:hint="Physical address"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#E0E0E0"
                            android:textSize="20dp"
                            android:text="Destination"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                        <RadioGroup
                            android:id="@+id/destination_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/to_town"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Town"
                                android:layout_weight="1"
                                android:textColor="#E0E0E0"
                                android:buttonTint="#E0E0E0"
                                android:checked="true" />
                            <RadioButton
                                android:id="@+id/to_local"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#E0E0E0"
                                android:buttonTint="#E0E0E0"
                                android:layout_weight="1"
                                android:text="Local" />
                        </RadioGroup>
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passenger_dest"
                android:inputType="text"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_corner_text_edit"
                android:hint="Pretoria CBD"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="#E0E0E0"
                            android:textSize="20dp"
                            android:text="Description"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/route_description"
                android:inputType="text"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_corner_text_edit"
                android:hint="e.g via Shubart street"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#fff"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#E0E0E0"
                android:textSize="20dp"
                android:text="Seats"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/booked_seats"
                android:layout_weight="1"
                android:inputType="number"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_corner_text_edit"
                android:hint="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#E0E0E0"
                android:textSize="20dp"
                android:text="Fare"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trip_fare"
                android:layout_weight="1"
                android:enabled="false"
                android:inputType="number"
                android:padding="10dp"
                android:maxLength="2"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_corner_text_edit"
                android:hint="R40.00"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#fff"
                android:layout_marginBottom="5dp" />
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >
                <RadioGroup
                    android:id="@+id/driver_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/close_driver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Closest driver"
                        android:textColor="#E0E0E0"
                        android:buttonTint="#E0E0E0"
                        android:layout_weight="1"
                        android:checked="true" />
                    <RadioButton
                        android:id="@+id/choose_driver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#E0E0E0"
                        android:buttonTint="#E0E0E0"
                        android:text="Choose driver" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--</ScrollView>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submit_request"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_corner_button"
            android:textStyle="bold"
            android:text="SEND REQUEST"/>
    </RelativeLayout>
</LinearLayout>
    </ScrollView>
